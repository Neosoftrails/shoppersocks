<%= javascript_include_tag  "rails.validations" %>  

 <article class="content-box minimizer">
  
  <header>
        
    <h2 style="padding-right: 90px;">Shops</h2>
    <nav>
      <ul class="button-switch">
        <li><a class="button" href="<%= shops_path %>">List Shops</a></li>
      </ul>
    </nav>

    <a title="Toggle Content Block" class="content-box-minimizer" href="#" style="display: block; left: 120px;">Toggle</a>
  </header>

  <section>

<%= form_for @shop , :validate => true, :html => { :multipart => true }  do |f| %>
  
  <fieldset><legend>Add Product </legend>

  
   <div class="field" >
   <font color="#000000" > <%= f.label :name %>
    <%= f.text_field :name, :style => 'margin-left:80px;' %></font>
  </div>
  <br />
  <div class="field" >
   <font color="#000000" > <%= f.label :address %>
    <%= f.text_field :address, :style => 'margin-left:80px;' %></font>
  </div>
  <br />
  <div class="field">
    <font color="#000000" ><%= f.label :area %>
    <%= f.text_field :area, :style => 'margin-left:135px;' %></font>
  </div>
 
<br /> 
<div class="field">
    <font color="#000000" ><%= f.label :city %>
    <%= f.text_field :city, :style => 'margin-left:135px;' %></font>
  </div>

  <br />
  <div class="field">
    <font color="#000000" ><%= f.label :country %>
    <%= f.text_field :country, :style => 'margin-left:135px;' %></font>
  </div>
  <br/>
  <div class="actions">
  </br>
    <%= f.submit %>
  </div>
<% end %>
